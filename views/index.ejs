        <!-- input  -->
        <form action="http://localhost:4001/add_food" method="post">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Ovqat nomi</label>
    <input placeholder="Ovaqat nomini kiriting" type="text" class="form-control" name="title" id="exampleInputEmail1" oninput="this.value = this.value.replace(/[0-9]/g, '')" 
 aria-describedby="emailHelp">
  </div>
    <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Eski narx</label> 
    <input type="text" class="form-control" name="old_price"  
       id="old_price" aria-describedby="emailHelp" placeholder="Eski narxni kiriting">

<script>
document.getElementById("old_price").addEventListener("input", function() {
    let numberOnly = this.value.replace(/\D/g, '');
    
    // qiymat bo'lsa, so'm qo'shish
    if (numberOnly) {
        this.value = numberOnly + " so'm";
    } else {
        this.value = "";
    }
});
</script>

  </div>
    <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Yangi narx</label><input type="text" class="form-control" name="new_price" id="new_price" aria-describedby="emailHelp" placeholder="Yangi narxni kiriting">

<script>
const newPriceInput = document.getElementById("new_price");

newPriceInput.addEventListener("input", function () {
    let numberOnly = this.value.replace(/\D/g, ''); // 
    
    if (numberOnly) {
        this.value = numberOnly + " so'm"; 
    } else {
        this.value = "";
    }
});
</script>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
